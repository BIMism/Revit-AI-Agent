<Window x:Class="RevitAIAgent.TeachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teach BIM'ism AI" Height="300" Width="500"
        WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="That wasn't right? Teach me the correct code:" 
                   Foreground="#333" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <TextBox x:Name="CodeInput" Grid.Row="1" 
                 AcceptsReturn="True" FontFamily="Consolas" FontSize="12"
                 Text="// Paste correct C# code here..."
                 BorderBrush="#DDD" Padding="5" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="80" Height="30" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Save Lesson" Width="100" Height="30" Background="#007ACC" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
