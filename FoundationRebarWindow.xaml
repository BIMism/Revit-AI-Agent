<Window x:Class="RevitAIAgent.FoundationRebarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foundation Rebar - BIMism AI Agent" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- TYPE SELECTION SCREEN -->
        <Grid x:Name="TypeSelectionGrid" Background="White" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Select Foundation Type" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>
                <WrapPanel HorizontalAlignment="Center" Width="700">
                    <Button x:Name="BtnIsolated" Width="150" Height="120" Margin="10" Click="BtnIsolated_Click">
                        <StackPanel>
                            <Image x:Name="ImgIsolated" Width="48" Height="48" Margin="0,0,0,10"/>
                            <TextBlock Text="Isolated" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnCombined" Width="150" Height="120" Margin="10" Click="BtnComingSoon_Click">
                        <StackPanel>
                            <Image x:Name="ImgCombined" Width="48" Height="48" Margin="0,0,0,10"/>
                            <TextBlock Text="Combined" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnStrap" Width="150" Height="120" Margin="10" Click="BtnComingSoon_Click">
                        <StackPanel>
                            <Image x:Name="ImgStrap" Width="48" Height="48" Margin="0,0,0,10"/>
                            <TextBlock Text="Strap" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnRaftMat" Width="150" Height="120" Margin="10" Click="BtnComingSoon_Click">
                        <StackPanel>
                            <Image x:Name="ImgRaft" Width="48" Height="48" Margin="0,0,0,10"/>
                            <TextBlock Text="Raft/Mat" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnPile" Width="150" Height="120" Margin="10" Click="BtnComingSoon_Click">
                        <StackPanel>
                            <Image x:Name="ImgPile" Width="48" Height="48" Margin="0,0,0,10"/>
                            <TextBlock Text="Pile" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnPileCap" Width="150" Height="120" Margin="10" Click="BtnComingSoon_Click">
                        <StackPanel>
                            <Image x:Name="ImgPileCap" Width="48" Height="48" Margin="0,0,0,10"/>
                            <TextBlock Text="Pile Cap" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnStrip" Width="150" Height="120" Margin="10" Click="BtnComingSoon_Click">
                        <StackPanel>
                            <Image x:Name="ImgStrip" Width="48" Height="48" Margin="0,0,0,10"/>
                            <TextBlock Text="Strip" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </Grid>

        <!-- DETAIL CONFIGURATION SCREEN -->
        <Grid x:Name="DetailGrid" Background="#F1F1F1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Menu -->
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="1" Background="White" Padding="15" BorderBrush="#CCC" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <Button Content="â† Back" Width="60" Height="25" Click="BtnBack_Click" Margin="0,0,20,0"/>
                    <TextBlock x:Name="TitleText" Text="Pad Footing Reinforcement" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Main Layout -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/> <!-- Sidebar -->
                    <ColumnDefinition Width="*"/>   <!-- Settings -->
                    <ColumnDefinition Width="300"/> <!-- Visual -->
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="White" BorderBrush="#CCC" BorderThickness="0,0,1,0">
                    <ListBox x:Name="SidebarList" SelectionChanged="SidebarList_SelectionChanged" BorderThickness="0" Padding="0,10">
                        <ListBoxItem Content="Geometry" Padding="10" IsSelected="True"/>
                        <ListBoxItem Content="Bottom bars" Padding="10"/>
                        <ListBoxItem Content="Top bars" Padding="10"/>
                        <ListBoxItem Content="Dowels" Padding="10"/>
                        <ListBoxItem Content="Stirrups" Padding="10"/>
                    </ListBox>
                </Border>

                <!-- Settings Content -->
                <ScrollViewer Grid.Column="1" Padding="20">
                    <StackPanel>
                        <!-- GEOMETRY PANEL -->
                        <Grid x:Name="PanelGeometry" Visibility="Visible">
                            <GroupBox Header="Concrete Geometry">
                                <StackPanel>
                                    <TextBlock Text="Cover Settings" FontWeight="Bold" Margin="0,5"/>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                        <TextBlock Text="Top Cover:"/>
                                        <ComboBox Grid.Column="1" x:Name="ComboCoverTop" />
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                        <TextBlock Text="Bottom Cover:"/>
                                        <ComboBox Grid.Column="1" x:Name="ComboCoverBottom" />
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                        <TextBlock Text="Side Cover:"/>
                                        <ComboBox Grid.Column="1" x:Name="ComboCoverSide" />
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </Grid>

                        <!-- BOTTOM BARS PANEL -->
                        <Grid x:Name="PanelBottomBars" Visibility="Collapsed">
                            <GroupBox Header="Longitudinal Bars (Direction X)">
                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="Bar Type:" Margin="0,5"/>
                                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboBarTypeX" Margin="10,5,0,5"/>

                                    <TextBlock Grid.Row="1" Text="Hook:" Margin="0,5"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboHookX" Margin="10,5,0,5"/>
                                    
                                    <TextBlock Grid.Row="2" Text="Spacing (mm):" Margin="0,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="InputSpacingX" Text="200" Margin="10,5,0,5"/>

                                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5">
                                        <CheckBox x:Name="CheckOverrideHookX" Content="Override Hook Len:" VerticalAlignment="Center"/>
                                        <TextBox x:Name="InputHookLenX" Text="300" Width="50" Margin="5,0,0,0" IsEnabled="{Binding IsChecked, ElementName=CheckOverrideHookX}"/>
                                        <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                            
                             <GroupBox Header="Transversal Bars (Direction Y)">
                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="Bar Type:" Margin="0,5"/>
                                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboBarTypeY" Margin="10,5,0,5"/>

                                    <TextBlock Grid.Row="1" Text="Hook:" Margin="0,5"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboHookY" Margin="10,5,0,5"/>
                                    
                                    <TextBlock Grid.Row="2" Text="Spacing (mm):" Margin="0,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="InputSpacingY" Text="200" Margin="10,5,0,5"/>
                                    
                                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5">
                                        <CheckBox x:Name="CheckOverrideHookY" Content="Override Hook Len:" VerticalAlignment="Center"/>
                                        <TextBox x:Name="InputHookLenY" Text="300" Width="50" Margin="5,0,0,0" IsEnabled="{Binding IsChecked, ElementName=CheckOverrideHookY}"/>
                                        <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </Grid>
                        
                        <!-- TOP BARS PANEL -->
                        <Grid x:Name="PanelTopBars" Visibility="Collapsed">
                             <CheckBox x:Name="CheckAddTopBars" Content="Enable Top Bars" IsChecked="False" Margin="0,0,0,10"/>
                             <GroupBox Header="Longitudinal Bars (Direction X)">
                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="Bar Type:" Margin="0,5"/>
                                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboTopBarTypeX" Margin="10,5,0,5"/>

                                    <TextBlock Grid.Row="1" Text="Hook:" Margin="0,5"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboTopHookX" Margin="10,5,0,5"/>
                                    
                                    <TextBlock Grid.Row="2" Text="Spacing (mm):" Margin="0,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="InputTopSpacingX" Text="200" Margin="10,5,0,5"/>

                                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5">
                                        <CheckBox x:Name="CheckOverrideTopHookX" Content="Override Hook Len:" VerticalAlignment="Center"/>
                                        <TextBox x:Name="InputTopHookLenX" Text="300" Width="50" Margin="5,0,0,0" IsEnabled="{Binding IsChecked, ElementName=CheckOverrideTopHookX}"/>
                                        <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Transversal Bars (Direction Y)">
                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="Bar Type:" Margin="0,5"/>
                                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboTopBarTypeY" Margin="10,5,0,5"/>

                                    <TextBlock Grid.Row="1" Text="Hook:" Margin="0,5"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboTopHookY" Margin="10,5,0,5"/>
                                    
                                    <TextBlock Grid.Row="2" Text="Spacing (mm):" Margin="0,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="InputTopSpacingY" Text="200" Margin="10,5,0,5"/>

                                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5">
                                        <CheckBox x:Name="CheckOverrideTopHookY" Content="Override Hook Len:" VerticalAlignment="Center"/>
                                        <TextBox x:Name="InputTopHookLenY" Text="300" Width="50" Margin="5,0,0,0" IsEnabled="{Binding IsChecked, ElementName=CheckOverrideTopHookY}"/>
                                        <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </Grid>

                         <!-- DOWELS PANEL -->
                         <Grid x:Name="PanelDowels" Visibility="Collapsed">
                             <GroupBox Header="Column Dowels">
                                 <StackPanel>
                                     <CheckBox x:Name="CheckAddDowels" Content="Add Dowels" IsChecked="True" Margin="0,0,0,10"/>
                                     <Grid>
                                         <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                         <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>

                                         <TextBlock Grid.Row="0" Text="Bar Type:" Margin="0,5"/>
                                         <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboDowelBarType" Margin="0,5"/>

                                          <TextBlock Grid.Row="1" Text="Hook Base:" Margin="0,5"/>
                                          <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboDowelHookBase" Margin="0,5"/>

                                         <TextBlock Grid.Row="2" Text="Number of Bars:" Margin="0,5"/>
                                         <TextBox Grid.Row="2" Grid.Column="1" x:Name="InputDowelCount" Text="4" Margin="0,5"/>
                                         
                                         <TextBlock Grid.Row="3" Text="Length (mm):" Margin="0,5"/>
                                         <TextBox Grid.Row="3" Grid.Column="1" x:Name="InputDowelLength" Text="1000" Margin="0,5"/>
                                     </Grid>
                                 </StackPanel>
                             </GroupBox>
                        </Grid>
                        
                         <!-- STIRRUPS PANEL -->
                         <Grid x:Name="PanelStirrups" Visibility="Collapsed">
                              <GroupBox Header="Pier Stirrups">
                                 <StackPanel>
                                     <CheckBox x:Name="CheckAddStirrups" Content="Add Stirrups" IsChecked="True" Margin="0,0,0,10"/>
                                      <Grid>
                                         <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition/></Grid.ColumnDefinitions>
                                         <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>

                                         <TextBlock Grid.Row="0" Text="Bar Type:" Margin="0,5"/>
                                         <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboStirrupBarType" Margin="0,5"/>

                                         <TextBlock Grid.Row="1" Text="Distribution Type:" Margin="0,5"/>
                                         <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboStirrupTarget" SelectedIndex="0" Margin="0,5">
                                             <ComboBoxItem Content="Uniform Spacing"/>
                                         </ComboBox>

                                         <TextBlock Grid.Row="2" Text="Spacing (mm):" Margin="0,5"/>
                                         <TextBox Grid.Row="2" Grid.Column="1" x:Name="InputStirrupSpacing" Text="150" Margin="0,5"/>
                                     </Grid>
                                 </StackPanel>
                             </GroupBox>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>

                <!-- Preview Sidebar -->
                <Border Grid.Column="2" Background="White" BorderBrush="#CCC" BorderThickness="1,0,0,0" Padding="10">
                    <StackPanel>
                         <TextBlock Text="3D Preview" FontWeight="Bold" Margin="0,0,0,10"/>
                         <!-- Placeholder for 3D View -->
                         <Border Height="200" Background="#EEE" BorderBrush="#CCC" BorderThickness="1">
                             <TextBlock Text="[3D View]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                         </Border>
                         <TextBlock Text="Schematic" FontWeight="Bold" Margin="0,20,0,10"/>
                          <Border Height="150" Background="#EEE" BorderBrush="#CCC" BorderThickness="1">
                             <TextBlock Text="[Section View]" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                         </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="3" Background="#F8F8F8" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <CheckBox Content="Dynamic Model Update" VerticalAlignment="Center" Margin="0,0,20,0" IsChecked="True"/>
                    <Button x:Name="BtnCancel" Content="Cancel" Width="100" Height="30" Click="BtnCancel_Click"/>
                    <Button x:Name="BtnOk" Content="Generate Rebar" Width="120" Height="30" Margin="10,0" Click="BtnOk_Click" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
