<Page x:Class="RevitAIAgent.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="300"
      Title="BIM'ism AI Agent">

    <Page.Resources>
        <Style x:Key="ChatBubble" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <TabControl BorderThickness="0" Background="Transparent" Margin="0,5,0,0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </TabControl.Resources>

            <!-- MODULE 1: AI ASSISTANT -->
            <TabItem Header="ðŸ’¬ Copilot">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- History -->
                        <RowDefinition Height="Auto"/> <!-- Input -->
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#f8f9fa" Padding="10" BorderBrush="#eee" BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock Text="BIM'ism Chat" FontWeight="Bold" Foreground="#444" HorizontalAlignment="Center"/>
                            <Button x:Name="ExportButton" Content="ðŸ“‹ Export" HorizontalAlignment="Right" 
                                    Click="ExportButton_Click" Background="Transparent" BorderThickness="0" 
                                    Foreground="#007ACC" FontSize="11" Padding="5" Cursor="Hand"
                                    ToolTip="Export chat history to clipboard"/>
                        </Grid>
                    </Border>

                    <!-- Chat History -->
                    <ScrollViewer Grid.Row="1" x:Name="ChatScroll" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" Padding="5">
                        <StackPanel x:Name="ChatHistoryPanel" />
                    </ScrollViewer>

                    <!-- Input Area -->
                    <Border Grid.Row="2" Padding="10" Background="#f9f9f9" BorderBrush="#eee" BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="InputBox" Grid.Column="0" Height="40" Margin="0,0,10,0" 
                                      TextWrapping="Wrap" VerticalContentAlignment="Center" 
                                      FontSize="13" KeyDown="InputBox_KeyDown" BorderBrush="#ddd" Padding="5"/>
                            
                            <Button x:Name="SendButton" Grid.Column="1" Content="âž¤" Width="40" Height="40" 
                                    Click="SendButton_Click" Background="#007ACC" Foreground="White" 
                                    FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- MODULE 2: QA/QC RULES -->
            <TabItem Header="âœ… QA/QC">
                <StackPanel Margin="10">
                    <TextBlock Text="Model Hygiene" FontWeight="Bold" Margin="0,0,0,10" FontSize="14"/>
                    
                    <Button Content="Run Health Check" Height="35" Margin="0,0,0,5" Click="RunHealthCheck_Click" 
                            Background="#28a745" Foreground="White" BorderThickness="0"/>
                    
                    <TextBlock Text="Checks included:" Margin="0,10,0,5" Foreground="Gray"/>
                    <CheckBox Content="Find Imported DWGs" IsChecked="True"/>
                    <CheckBox Content="Check Duplicate Rooms" IsChecked="True"/>
                    <CheckBox Content="Audit Naming Standards" IsChecked="True"/>
                    
                    <TextBlock Text="Results:" Margin="0,20,0,5" FontWeight="Bold"/>
                    <TextBox x:Name="QAResultsBox" Height="200" TextWrapping="Wrap" IsReadOnly="True" 
                             Background="#f5f5f5" Padding="5" Text="No checks run yet."/>
                </StackPanel>
            </TabItem>

            <!-- MODULE 3: DATA & EXPORT -->
            <TabItem Header="ðŸ“Š Data">
                <StackPanel Margin="10">
                    <TextBlock Text="Data Management" FontWeight="Bold" Margin="0,0,0,10" FontSize="14"/>
                    
                    <Button Content="Export Wall Schedule (CSV)" Height="35" Margin="0,0,0,10" Click="ExportData_Click"/>
                    <Button Content="Export Room BOQ" Height="35" Margin="0,0,0,10" Click="ExportRooms_Click"/>
                    
                    <Separator Margin="0,10"/>
                    
                    <TextBlock Text="Parameter Tools" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Parameter Name:"/>
                    <TextBox x:Name="ParamNameBox" Height="25" Margin="0,0,0,5" Text="Mark"/>
                    <TextBlock Text="Value to Set:"/>
                    <TextBox x:Name="ParamValueBox" Height="25" Margin="0,0,0,10" Text="Checked"/>
                    
                    <Button Content="Bulk Set Parameter" Height="35" Click="BulkSetParam_Click" Background="#007ACC" Foreground="White"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
